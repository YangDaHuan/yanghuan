	<select id="getJobById" resultMap="BaseResultMap">
		SELECT
		*
		FROM
		sys_job j left join sys_job_param p on j.JOB_ID = p.JOB_ID
		WHERE
		j.JOB_ID = #{jobId,jdbcType=VARCHAR}

	</select>

	<select id="findAllJob" resultMap="BaseResultMap">
		SELECT * FROM sys_job

		<if test="state != null">
			WHERE STATE=#{state,jdbcType=INTEGER}
		</if>
	</select>
	<select id="findJobByGroupId" resultMap="BaseResultMap">
		SELECT * FROM sys_job
		WHERE JOB_GROUP_ID = #{jobGroupId,jdbcType=VARCHAR}
		<if test="state != null">
			AND STATE=#{state,jdbcType=INTEGER}
		</if>
	</select>
	<select id="findAllJobByTypeId" resultMap="BaseResultMap">
		SELECT * FROM sys_job j ,sys_job_param p
		WHERE JOB_TYPE_ID = #{jobTypeId,jdbcType=VARCHAR}
		and j.JOB_ID = p.JOB_ID
