<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd 
		http://cxf.apache.org/jaxws 
		http://cxf.apache.org/schemas/jaxws.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

	<!-- 日志记录拦截器 -->
	<bean id="loggingInInterceptor" class="org.apache.cxf.interceptor.LoggingInInterceptor" />
	<bean id="loggingOutInterceptor" class="org.apache.cxf.interceptor.LoggingOutInterceptor" />


	<!-- **************************************************************** BTP 
		web service 示例 **************************************************************** -->
	<jaxws:endpoint id="echoService"
		implementor="com.solidextend.btp.ws.server.EchoServiceImpl" address="/echo">
		<jaxws:inInterceptors>
			<ref bean="loggingInInterceptor" />
			<!-- 使用此拦截器实现安全验证 -->
			<bean class="org.apache.cxf.ws.security.wss4j.WSS4JInInterceptor">
				<constructor-arg>
					<map>
						<!-- 基于用户名 密码的验证 -->
						<entry key="action" value="UsernameToken" />
						<!-- 采用不加密的方式 -->
						<!-- <entry key="passwordType" value="PasswordText" /> -->
						<!-- 采用加密的方式 -->
						<entry key="passwordType" value="PasswordDigest" />
						<entry key="passwordCallbackRef">
							<bean
								class="com.solidextend.btp.ws.server.callack.ServerPasswordCallback" />
						</entry>
					</map>
				</constructor-arg>
			</bean>
		</jaxws:inInterceptors>
		<jaxws:outInterceptors>
			<ref bean="loggingOutInterceptor" />
		</jaxws:outInterceptors>
	</jaxws:endpoint>

	<!-- web service Motm模式传输文件示例 -->
	<jaxws:endpoint id="storageService"
		implementor="com.solidextend.btp.ws.server.StorageServiceImpl"
		address="/storage">
		<jaxws:properties>
			<entry key="mtom-enabled" value="true" />
		</jaxws:properties>
	</jaxws:endpoint>

	<!-- END -->

	<!-- EMPI对外接口 -->
	<jaxws:endpoint id="empiServiceWS"
		implementor="com.solidextend.btp.empi.service.EmpiServiceWSImpl"
		address="/EmpiServiceWS">
	</jaxws:endpoint>

</beans>